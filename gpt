import rospy
from std_msgs.msg import Float32
import socket
import time

def start_socket_server():
    host = '172.30.1.5'  # 소켓 서버의 IP 주소
    port = 5001          # 소켓 서버의 포트 번호
    server_socket = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    server_socket.bind((host, port))
    server_socket.listen(1)
    print("TCP/IP 소켓 서버가 시작되었습니다.")

    client_socket, addr = server_socket.accept()
    print('Connected by', addr)

    # ROS 퍼블리셔 초기화
    rospy.init_node('tcp_to_ros_publisher', anonymous=True)
    pub_throttle = rospy.Publisher('/Throttle', Float32, queue_size=10)
    pub_steering = rospy.Publisher('/Steering', Float32, queue_size=10)
    rate = rospy.Rate(10)  # 10hz

    try:
        while not rospy.is_shutdown():
            data = client_socket.recv(1024).decode()  # 클라이언트로부터 데이터 수신
            if data:
                commands = data.split(";")
                for command in commands:
                    topic, value = command.split(",")
                    try:
                        value = float(value)
                        if topic == "throttle":
                            pub_throttle.publish(value)
                            print(f"Published {value} to /Throttle")
                        elif topic == "steering":
                            pub_steering.publish(value)
                            print(f"Published {value} to /Steering")
                    except ValueError:
                        print("Received non-float data.")
            rate.sleep()
    finally:
        client_socket.close()
        server_socket.close()

if __name__ == '__main__':
    start_socket_server()
